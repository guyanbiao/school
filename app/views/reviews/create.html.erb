
<% @records.each do |record| %>
  <%= record.created_at %>
  <% @fetch_array = [] %>
  <% record.items.each do |item| %>
    <% if item["point_ids"].include?(@point.id) %>
      <% @fetch_array << {:child_id => item["child_id"], :choice => item["choice"] } %>
    <%= sanitize(ClozeChild.find(item["child_id"]).cloze.text) %>
    <b>Choices :</b> <%= ClozeChild.find(item["child_id"]).choices %>
    <b>Answer :</b> <%= ClozeChild.find(item["child_id"]).answer %>
    <b>Your choice :</b> <%= item["choice"] %><br/>
    <% end %>
  <% end %>
  <% @fetch_array.each do |fetch| %>
    <% sanitize(ClozeChild.find(fetch[:child_id]).cloze.text) %>
    <% end %>
<% end %>
