<%= debug params %>
<% if defined? @choices %>
  <%= @choices.each do |choice| %>
    <%= choice.text %><br/><%= choice.choices %> <%= choice.answer %> <%= params["choice_#{choice.id}"] %><br/>
    <% end %>
<% end %>
<% if defined? @clozes %>
  <% @clozes.each do |cloze| %>
    <%= raw cloze.text %>
    <% cloze.cloze_children.order_by([[:position, :asc]]).each do |child| %>
      <%= child.choices %> <b>answer: </b> <%= child.answer %> <b>Your answer: </b><%= params["cloze_#{cloze.id}_#{child.id}"] %><br/>
      <% end %>
  <% end %>
  
<% end %>

